<style media="screen">
    .warning {
        display: none;
        font-style: italic;
        color: red;
    }
</style>

<div class="container">
    <form class="form-vertical" action="/register" method="post">
        <div class="form-group">
            <label for="username">Username</label>
            <input id="username" class="form-control" type="text" name="username" value={{username}}>
            {{#if nameExisting}}
                <span class="warning" style="display: inline">Username already exists</span>
            {{/if}}
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" class="form-control" type="text" name="password" value={{password}}>
        </div>
        <div class="form-group">
            <label for="cfmpassword">Confirm Password</label>
            <input id="cfmpassword" class="form-control" type="text" value={{password}}>
            <span class="warning" id="pwd-warning">passwords don't match</span>
        </div>
        <div class="form-group">
            <label for="email">email</label>
            <input id="email" class="form-control" type="email" required name="email" value={{email}}>
        </div>
        <button id="submitBtn" type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

<script>
    $(document).ready(function () {
        $("#submitBtn").click(function (event) {
            if ($("#password").val() != $("#cfmpassword").val()) { // Password not confirmed
                event.preventDefault();
                $("#cfmpassword").focus();
                $("#pwd-warning").show();
            }
        })
    })
</script>
